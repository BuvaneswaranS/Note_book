    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/outlinedNoteDescription"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/guideline_16dp"
        android:layout_marginTop="@dimen/guideline_16dp"
        android:layout_marginBottom="@dimen/guideline_16dp"
        android:layout_marginEnd="@dimen/guideline_16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight="match_constraint"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/guideline2"
        app:layout_constraintBottom_toBottomOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/note_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:hint="@string/text_description_hint"
            android:inputType="textMultiLine"
            android:minLines="@integer/note_description_min_lines"
            android:textSize="@dimen/note_description_text_size" />

    </com.google.android.material.textfield.TextInputLayout>

    <ImageView
        android:id="@+id/create_note_backArrow_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/guideline_16dp"
        android:layout_marginTop="@dimen/Appbar_side_width"
        android:layout_marginBottom="@dimen/Appbar_side_width"
        app:layout_constraintBottom_toTopOf="@+id/guideline2"
        app:layout_constraintEnd_toStartOf="@+id/create_note_title_input"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_back_button" />

    <EditText
        android:id="@+id/create_note_title_input"
        style="@style/folder_note_title_style"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/guideline_16dp"
        android:layout_marginTop="@dimen/Appbar_side_width"
        android:layout_marginBottom="@dimen/guideline_16dp"
        android:layout_marginEnd="@dimen/guideline_16dp"
        android:background="@android:color/transparent"
        android:hint="@string/note_title_hint"
        android:textSize="@dimen/note_Title_text_Size"
        app:layout_constraintBottom_toTopOf="@id/guideline2"
        app:layout_constraintStart_toEndOf="@+id/create_note_backArrow_button"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/create_note_done_Button" />

    <ImageView
        android:id="@+id/create_note_done_Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/Appbar_side_width"
        android:layout_marginEnd="@dimen/guideline_16dp"
        android:layout_marginBottom="@dimen/Appbar_side_width"
        app:layout_constraintBottom_toTopOf="@+id/guideline2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintStart_toEndOf="@+id/create_note_title_input"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_done_button" />
    </androidx.constraintlayout.widget.ConstraintLayout>


