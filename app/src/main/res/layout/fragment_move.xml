<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".moveNotes.MoveFragment">


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/fragment_move_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="?attr/actionBarSize"/>

    <ImageView
        android:id="@+id/fragment_move_back_arrow_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/guideline_16dp"
        android:src="@drawable/ic_back_button"
        app:layout_constraintBottom_toTopOf="@id/fragment_move_guideline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/fragment_move_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/guideline_16dp"
        android:layout_marginTop="@dimen/guideline_16dp"
        android:layout_marginEnd="@dimen/guideline_16dp"
        android:layout_marginBottom="@dimen/guideline_16dp"
        android:text="TextView"
        android:textSize="@dimen/folder_title_text_Size"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/fragment_move_guideline"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="@integer/horizontal_bias_0"
        app:layout_constraintStart_toEndOf="@+id/fragment_move_back_arrow_button"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/fragment_move_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fragment_move_guideline"
        app:layout_constraintHeight="match_constraint"/>


</androidx.constraintlayout.widget.ConstraintLayout>