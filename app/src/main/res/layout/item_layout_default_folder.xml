<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="@dimen/folder_card_width"
    android:layout_height="@dimen/folder_card_height">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/note_card"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardElevation="@dimen/folder_card_elevation">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/folder_image_default"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                app:srcCompat="@drawable/ic_notebook"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@id/folder_content_folder_title"/>

            <TextView
                android:id="@+id/folder_content_folder_title"
                style="@style/default_folder_title_style_made"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLength="@integer/update_folder_title_max_length"
                android:maxLines="@integer/folder_title_lines"
                android:text="@string/default_folder_title_text_view_text"
                android:ellipsize="end"
                android:textColor="@color/purple_500"
                app:layout_constraintTop_toBottomOf="@id/folder_image_default"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">

            </TextView>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/folder_selected"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@color/item_layout_note_if_selected_background_color"
                android:visibility="gone"
                app:layout_constraintBottom_toTopOf="@+id/folder_content_folder_title"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/selected_tick_button_folder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/ic_baseline_done_24" />
            </androidx.constraintlayout.widget.ConstraintLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

</LinearLayout>