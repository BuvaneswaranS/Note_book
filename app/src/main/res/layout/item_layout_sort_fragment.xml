            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/sort_close_button"
            style="@style/notebook_bottom_sheet_title_text_style" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/sort_close_button"
