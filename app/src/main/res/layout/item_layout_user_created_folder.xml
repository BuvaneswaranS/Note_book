<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/folder_card_width"
    android:layout_height="@dimen/folder_card_height"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/note_card"
        android:layout_width="@dimen/folder_card_width"
        android:layout_height="@dimen/folder_card_height"
        app:cardElevation="@dimen/folder_card_elevation">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_width="@dimen/folder_image_layout_width"
            android:layout_height="@dimen/Image_layout_height"
            app:srcCompat="@drawable/ic_notebook_leather_01" />

        <TextView
            android:id="@+id/folder_content_folder_title"
            style="@style/default_folder_title_style_made1"
            android:layout_width="@dimen/folder_title_layout_width"
            android:layout_height="@dimen/folder_title_layout_height"
            android:text="@string/default_folder_title_text_view_text">

        </TextView>

    </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

</LinearLayout>