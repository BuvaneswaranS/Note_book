<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="default_folder_title_style">
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">@dimen/folder_card_title_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:color">@android:color/holo_blue_bright</item>
    </style>

    <style name="App_name_title_style">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="folder_note_title_style">
        <item name="android:layout_marginStart">24dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:ems">10</item>
        <item name="android:inputType">textPersonName</item>
    </style>

    <style name="default_folder_title_style_made" parent="default_folder_title_style">
        <item name="android:textColor">@android:color/holo_blue_bright</item>
    </style>

    <style name="default_folder_title_style_made1" parent="default_folder_title_style">
        <item name="android:textColor">@color/purple_700</item>
    </style>

    <style name="folder_title_style">
        <item name="android:layout_marginStart">24dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:ems">10</item>
        <item name="android:inputType">textPersonName</item>
    </style>

    <style name="folder_content_title_style">
        <item name="android:layout_marginStart">24dp</item>
        <item name="android:textColor">#28D32F</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="update_folder_title_style">
        <item name="android:textColor">@color/App_title_color</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="display_no_notes_card_style">
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">34sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="loading_menu_text_style">
        <item name="android:textSize">@dimen/loading_menu_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="search_folder_title_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="sort_bottom_sheet_text_style">
        <item name="android:textSize">@dimen/text_size_24sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_marginStart">@dimen/guideline_16dp</item>
        <item name="android:layout_marginEnd">@dimen/guideline_16dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="sort_close_button_text_style">
        <item name="android:layout_marginStart">@dimen/guideline_16dp</item>
        <item name="android:textSize">@dimen/text_size_20sp</item>
        <item name="android:layout_marginEnd">@dimen/guideline_16dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="notebook_bottom_sheet_title_text_style" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="notebook_bottom_sheet_item_text_area">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginStart">@dimen/guideline_16dp</item>
        <item name="android:layout_marginEnd">@dimen/guideline_16dp</item>
    </style>

</resources>